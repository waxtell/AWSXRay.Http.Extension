<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Will Axtell</Authors>
    <Description>Enable AWS XRay tracing for external HTTP dependencies</Description>
    <PackageReleaseNotes>1.0.0- Initial release</PackageReleaseNotes>
    <Version>1.0.0</Version>
    <RepositoryUrl>https://github.com/waxtell/AWSXRay.Http.Extension.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>AWS XRay HTTP</PackageTags>
    <PackageProjectUrl>https://github.com/waxtell/AWSXRay.Http.Extension</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ConfigurationSection.Inheritance.Extension" Version="1.0.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.2" />
    <PackageReference Include="Microsoft.Extensions.DiagnosticAdapter" Version="3.1.2" />
    <PackageReference Include="AWSXRayRecorder.Handlers.AspNetCore" Version="2.6.2" />
  </ItemGroup>

</Project>
